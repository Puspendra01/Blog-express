<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/dashboard">Dashboard</a></li>
              <li><a href="/display" class="active">Blogs</a></li>
              <li><a href="/category">Categories</a></li>
              <li><a href="/pages">Pages</a></li>
              <li><a href="/">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>About</h1>
              </div>
              
            </div>
            <table class="table table-bordered table-striped">
              <tr>
                <th>#ID</th>
                <th>Title</th>
                <th>Image</th>
                <th>Action</th>
              </tr>
              <% d.forEach((abo)=> { %>
              <tr>
                <td><%= abo._id %></td>
                <td><%= abo.about %></td>

                <td><img src="<%= abo.image.url %>" width="50px" alt="" /></td>
                <td>
                  <a href="/cateedit/<%= cate._id %>" class="btn btn-info btn-sm" >Edit</a>                                   
                </td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../footer.ejs') %>
