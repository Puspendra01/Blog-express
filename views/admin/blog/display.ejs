<%- include('../../header.ejs') %>


<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/display" class="active">Blogs</a></li>
                            <li><a href="/category">Categories</a></li>
                            <li><a href="/pages">Pages</a></li>
                            <li><a href="/">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Blogs</h1>
                            </div>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Add blog
                              </button>
                        </div>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>#ID</th>                                
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            <% d.forEach((item)=> { %>
                                <tr>
                                    <td><%= item._id %></td>
                                    <td><%= item.title %></td>
                                    <td><%= item.description %></td>
                                    <td><img src="<%= item.image.url %>" width="50px" alt=""></td>                       
                                    <td>
                                        <a href="/blogview/<%= item._id %>" class="btn btn-info btn-sm">View</a>
                                        <a href="/blogedit/<%= item._id %>" class="btn btn-info btn-sm">Edit</a>
                                        <a href="/blogdelete/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>  
                            <% }) %>                                                  
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<!-- model demo create -->


<!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Blog</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/insertblog" method="post" enctype="multipart/form-data">
            <div class="md-3">
                <label for="">Title</label>
                <input type="text" name="title" class="form-control">
            </div>
            <div class="md-3">
                <label for="">Description</label>
                <textarea type="text" name="description" class="form-control"></textarea>
            </div>
            <div class="md-3">
                <label for="">Upload image</label>
                <input type="file" name="image" class="form-control">
            </div>
            <button type="submit" class="btn btn-info ">submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>




<%- include('../../footer.ejs') %>