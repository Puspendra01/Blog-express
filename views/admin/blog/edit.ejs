<%- include('../../header.ejs') %>


<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/display" class="active">Blogs</a></li>
                            <li><a href="/category">Categories</a></li>
                            <li><a href="/pages">Pages</a></li>
                            <li><a href="/">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Blogs</h1>
                            </div>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Add blog
                              </button>
                        </div>
                        <form action="/blogupdate/<%= edit._id %>" method="post" enctype="multipart/form-data">
                            <div class="md-3">
                                <label for="">Title</label>
                                <input type="text" class="form-control" name="title" value="<%= edit.title %>">
                            </div>
                            <div class="md-3">
                                <label for="">Description</label>
                                <textarea name="description" class="form-control" id="" cols="30" rows="10"><%= edit.description %></textarea>
                            </div>
                            <div class="md-3">
                                <label for="">Upload image</label>
                                <input type="file" name="image" class="form-control">
                            </div>
                            <div class="md-3">
                            <img src="<%= edit.image.url %>" width="150px" alt="">
                        </div>
                            <button type="submit" class="btn btn-primary bg-blue-500">Update</button>
                          </form>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>





<%- include('../../footer.ejs') %>










































