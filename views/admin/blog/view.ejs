<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/dashboard">Dashboard</a></li>
              <li><a href="/display" class="active">Blogs</a></li>
              <li><a href="/category">Categories</a></li>
              <li><a href="/pages">Pages</a></li>
              <li><a href="#">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Blog List</h1>
              </div>
            </div>
            <table class="table table-bordered table-striped">
              <tr>
                <th>#ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
              </tr>
              <tr>
                <td><%= view._id %></td>
                <td><%= view.title %></td>
                <td><%= view.description %></td>
                <td><img src="<%= view.image.url %>" alt=""></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../footer.ejs') %>
