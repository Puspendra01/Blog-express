<%- include('./header.ejs') %>


<section class="blog-detail mtb-40">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-left">
                    <h3><%= d.title %></h3>
                    <div class="posted-on">
                        <p>by<span><%= d.createdAt.toLocaleDateString() %></span></p>
                    </div>
                    <div class="detail-img">
                       <img src="<%= d.image.url %>" width="750px" alt="" />
                    </div>
                    <div class="blog-desc">
                        <p><%= d.description %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-right">
                    <div class="right-widget recent-post">
                        <h3>Recent Blogs</h3><% r.forEach((recentitem)=>{ %>
                        <a href="#">
                            <div class="rb-box">                                
                                <div class="rb-box-img">
                                    <img src="<%= recentitem.image.url %>" width="150px" alt="" />
                                </div>
                                <div class="rb-box-desc">
                                    <h4><%= recentitem.title %></h4>
                                    <p><%= recentitem.createdAt.toLocaleDateString() %></p>
                                </div>
                                
                            </div>
                        </a>
                        <% }) %>
                    </div>
                     <div class="right-widget categories">
                         <h3>Categories</h3>
                         <% c.forEach((categoryitem)=>{ %>
                         <ul>
                            <li><a href="" class="text-decoration-none"><%= categoryitem.cat_name %></a></li>
                             </ul>
                             <% }) %>
                     </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('./footer.ejs') %>