                <section class="featured-blog mtb-40">
                    <div class="container">
                        <div class="row">
                            <% b.forEach((item)=>{ %>
                <div class="col-md-4">
                    <div class="blog-box">
                        <img src="<%= item.image.url %>" height="250px" alt="" />
                        <h3><%= item.title %></h3>
                        <p><%= item.description.slice(0,100) %></p>
                        <p><span><%= item.createdAt.toLocaleDateString() %></span></p>
                        <a href="/blog-details/<%= item._id %>" class="btn btn-danger">Read more...</a>
                    </div>
                </div>  
                <% }) %>
            </div>
        </div>
    </section>
           
                        
        



